<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zgy.translate.activitys.PersonalizedActivity"
    android:orientation="vertical">

    <com.zgy.translate.widget.CommonBar
        android:id="@+id/ap_cb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_title="个性签名"
        app:show_left="true"/>

    <EditText
        android:id="@+id/ap_et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:minHeight="200dp"
        android:textCursorDrawable="@null"
        android:background="@color/colorText"
        android:hint="请输入您的个性签名最多可输入100字"
        android:gravity="top"
        android:padding="@dimen/padding_10"
        android:textSize="@dimen/text_16"/>

    <TextView
        android:id="@+id/ap_tv_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_50"
        android:layout_marginStart="@dimen/dimen_50"
        android:layout_marginEnd="@dimen/dimen_50"
        android:background="@drawable/bg_button_solid"
        android:padding="@dimen/padding_10"
        android:gravity="center"
        android:textColor="@color/colorText"
        android:textSize="@dimen/text_16"
        android:text="提交"/>

</LinearLayout>
